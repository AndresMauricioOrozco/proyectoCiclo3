@page
@model Taller.App.Front.Pages.LoginModel
@{   
    ViewData["Title"] = "LOGIN";
}
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Taller Mecanico/Iniciar Sesion</title>
    <script src="https://kit.fontawesome.com/b6b237481f.js" crossorigin="anonymous"></script>   
    
</head>
<body>
    <form class="formulario">
        
        <h1>Iniciar Sesion</h1>
        <div class="contenedor">
        
        <div class="input-contenedor">
            <i class="fa-solid fa-envelope icon"></i>
            <input type="text" placeholder="Correo Electronico">

        </div>  

        <div class="input-contenedor">
            <i class="fa-solid fa-key icon"></i>
            <input type="password" placeholder="Contraseña">

        </div>  
        <input type="submit" value="Login" class="button">
        <p>¿No tienes cuenta?<a class="link" asp-page="/Register/Register"> Registrate</a></p>
        </div>

    </form>
    
</body>
</html>
